@model List<_UserPartial>

@foreach (var user in Model)
{
    <a href="#" onclick="selectUser('@user.Username');event.preventDefault();" id="userlist-@user.Username" class="list-group-item" aria-current="true">
         <div class="d-flex w-100 justify-content-between">
             <h5 class="mb-1 nowrap">
                 <span id="userlist-name-@user.Username">@user.DisplayName</span> <small id="userlist-onlinestatus-@user.Username" class="online-status">●</small>
             </h5>
             @if (user.LastMessageTime.Hour == 0 && user.LastMessageTime.Minute == 0)
             {
                 <small id="userlist-time-@user.Username" class="text-muted"></small>
             }
             else
             {
                 <small id="userlist-time-@user.Username" class="text-muted">@user.LastMessageTime.ToString("hh:mm")</small>
             }
         </div>
        <p id="userlist-message-@user.Username" class="text-muted mb-1 w-100 nowrap">
            @(user.IsSender ? "You: " : "")@user.LastMessageContent
        </p>
     </a>
}                 


